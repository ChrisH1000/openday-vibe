{
  "name": "openday",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "ts-standard '**/*.{ts,tsx}' && standard '**/*.{js,jsx}'",
    "lint:fix": "ts-standard --fix '**/*.{ts,tsx}' && standard --fix '**/*.{js,jsx}'",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "standard": "^17.1.0",
    "ts-standard": "^12.0.0"
  },
  "standard": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      "build/**"
    ]
  },
  "ts-standard": {
    "project": "./tsconfig.json"
  }
}
